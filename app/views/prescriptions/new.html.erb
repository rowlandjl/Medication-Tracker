<%= prescription_error_messages! %>

<h3>Create Prescription</h3>

<%= form_for @prescription do |f| %>

  <div class="form-group">
    <%= f.text_field :drug, id: "drug_name", placeholder: "Drug Name" %>
  </div>

  <div class="form-group">
    <%= f.text_field :quantity, id: "quantity", placeholder: "Quantity" %>
  </div>

  <div class="form-group">
    <%= f.text_field :dose_count, id: "dose_count", placeholder: "Dose Count" %>
  </div>

  <div class="form-group">
    <%= f.text_field :frequency, id: "frequency", placeholder: "Frequency" %>
  </div>

  <div class="form-group">
    <%= f.text_field :start_date, id: "start_date", placeholder: "Start Date" %>
  </div>

  <div class="form-group">
    <%= f.text_field :end_date, id: "end_date", placeholder: "End Date" %>
  </div>

  <div class="form-group">
    <%= f.text_field :physician_name, id: "physician", placeholder: "Physician Name" %>
  </div>

  <div class="actions">
    <%= f.submit "Add Prescription" %>
  </div>
<% end %>
