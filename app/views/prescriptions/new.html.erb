<h3>Create Prescription</h3>

<%= form_for @prescription do |f| %>

  <div class="form-group">
    <%= f.label :drug_name %>
    <%= f.text_field :drug_name %>
  </div>

  <div class="form-group">
    <%= f.label :quantity %>
    <%= f.text_field :quantity %>
  </div>

  <div class="form-group">
    <%= f.label :dose_count %>
    <%= f.text_field :dose_count %>
  </div>

  <div class="form-group">
    <%= f.label :frequency %>
    <%= f.text_field :frequency %>
  </div>

  <div class="form-group">
    <%= f.label :start_date %>
    <%= f.text_field :end_date %>
  </div>

  <div class="form-group">
    <%= f.label :end_date %>
    <%= f.text_field :end_date %>
  </div>

  <div class="form-group">
    <%= f.label :physician_name %>
    <%= f.text_field :physician_name %>
  </div>

  <div class="actions">
    <%= f.submit "Add Prescription" %>
  </div>
<% end %>
