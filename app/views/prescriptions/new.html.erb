<h3>Create Prescription</h3>

<%= form_for @prescription do |f| %>

  <div class="form-group">
    <%= f.text_field :drug, id: 'drug_name' %>
  </div>

  <div class="form-group">
    <%= f.label :quantity %>
    <%= f.text_field :quantity %>
  </div>



  <div class="form-group">
    <%= f.label :frequency %>
    <%= f.text_field :frequency %>
  </div>

  <div class="form-group">
    <%= f.label :start_date %>
    <%= f.text_field :end_date %>
  </div>

  <div class="form-group">
    <%= f.label :end_date %>
    <%= f.text_field :end_date %>
  </div>


  <div class="actions">
    <%= f.submit "Create Prescription" %>
  </div>
<% end %>
