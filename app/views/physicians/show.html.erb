<div class="row">
  <div class="col-sm-6 col-sm-offset-3">
    <table class="table table-condensed table-fill">
      <thead>
        <tr>
          <th class="text-left"><%= @physician.name %></th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <% if !@physician.office.empty? %>
            <td>Office: <%= @physician.office %></td>
          <% end %>
        </tr>
        <tr>
          <% if !@physician.address.empty? && !@physician.city.empty? && !@physician.state.empty? && !@physician.zip.empty? %>
            <td>Address: <%= @physician.address %>, <%= @physician.city %>, <%= @physician.state %> <%= @physician.zip %></td>
          <% end %>
        </tr>
        <tr>
          <td>Phone Number: <%= @physician.phone %></td>
        </tr>
      </tbody>
    </table>
  </div>
</div>
<div class="row text-center ">
  <p id="user-log-in">No longer seeing this physician?</p>
  <p><%= link_to "Delete Physician", physician_path(@physician), method: :delete %></p>
</div>
